<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>

            <stroke
                android:width="3dip" android:color="@color/customer_pink"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>

            <stroke
                android:width="3dip" android:color="@color/customer_pink"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
</selector>