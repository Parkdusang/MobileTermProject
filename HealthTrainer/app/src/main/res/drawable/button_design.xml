<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="15dp"
                />
            <gradient
                android:angle="180"
                android:startColor="#5a2d35"
                android:endColor="#392b36"
                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="15dp"
                />
            <gradient
                android:angle="180"
                android:startColor="#785970"
                android:endColor="#bc5f6e"
                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
</selector>