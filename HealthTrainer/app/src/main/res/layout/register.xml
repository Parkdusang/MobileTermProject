<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register"
    tools:context="com.example.parkdusang.healthtrainer.customermode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/rg_edit1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/input_register_bg"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/input_register_hint"
            android:hint="  I D" />

        <EditText
            android:id="@+id/rg_edit4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/input_register_bg"
            android:textColorHint="@color/input_register_hint"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            android:hint="  Name" />


        <EditText
            android:id="@+id/rg_edit2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/input_register_bg"
            android:textColorHint="@color/input_register_hint"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"

            android:hint="  Password" />


        <EditText
            android:id="@+id/rg_edit2c"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/input_register_bg"
            android:textColorHint="@color/input_register_hint"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            android:hint="  Check PW" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:id="@+id/rg_edit3_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/input_register_bg"
                android:textColorHint="@color/input_register_hint"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:hint="ex)01" />
            <View
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#b8bebd" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/rg_edit3_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/input_register_bg"
                android:textColorHint="@color/input_register_hint"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:hint="Num" />
            <View
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#b8bebd" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/rg_edit3_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/input_register_bg"
                android:textColorHint="@color/input_register_hint"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:hint="  ber" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="성별  "
            android:textAppearance="?android:attr/textAppearanceLarge" />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <RadioButton
            android:id="@+id/sex1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 남 " />

        <RadioButton
            android:id="@+id/sex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 여 " />
</RadioGroup>
        <TextView
            android:id="@+id/rg_pwcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff0000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


<Button
android:id="@+id/button5"
android:background="@drawable/button_design"
android:layout_width="100dp"
android:layout_height="wrap_content"
android:layout_marginRight="10dp"
android:textColor="@color/white"
android:textSize="20dp"
android:textStyle="bold"
android:text=" OK " />

<Button
android:id="@+id/button6"
android:background="@drawable/button_design"
android:layout_width="100dp"
android:layout_height="wrap_content"
android:textColor="@color/white"
android:textSize="20dp"
android:textStyle="bold"
android:text=" Cancel " />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
