<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    tools:context="com.fitcen.parkdusang.healthtrainer.Connectionwaiting"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/title_fitcen"
        android:layout_weight="3"/>
    <TextView
        android:id="@+id/connecttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sasdasd"
        android:layout_weight="2"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2">


        <Button
            android:id="@+id/connectbtno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="OK" />

        <Button
            android:id="@+id/connectbtnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>